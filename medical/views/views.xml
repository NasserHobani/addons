<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="medical.form">
            <field name="name">medical form</field>
            <field name="model">medical.medical</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="clinic_limit"/>
                            <field name="covid_vaccine"/>
                            <field name="chair_from"/>
                            <field name="chair_to"/>
                            <field name="employee"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="medical.list">
            <field name="name">medical list</field>
            <field name="model">medical.medical</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee"/>
                    <field name="code"/>
                    <field name="clinic_limit"/>
                    <field name="covid_vaccine"/>
                    <field name="chair_from"/>
                    <field name="chair_to"/>
                </tree>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="medical.action_window">
            <field name="name">medical window</field>
            <field name="res_model">medical.medical</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->
        <!--
